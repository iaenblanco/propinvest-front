# Headers para Cloudflare Pages
# Configuración para evitar el modo SPA y preservar rutas estáticas

# Headers para páginas de categorías específicas
/propiedades/en-venta.html
  X-Frame-Options: DENY
  X-Content-Type-Options: nosniff
  Referrer-Policy: strict-origin-when-cross-origin

/propiedades/en-arriendo.html
  X-Frame-Options: DENY
  X-Content-Type-Options: nosniff
  Referrer-Policy: strict-origin-when-cross-origin

/propiedades/oportunidades.html
  X-Frame-Options: DENY
  X-Content-Type-Options: nosniff
  Referrer-Policy: strict-origin-when-cross-origin

# Headers para la página dinámica
/propiedad-dinamica.html
  X-Frame-Options: DENY
  X-Content-Type-Options: nosniff
  Referrer-Policy: strict-origin-when-cross-origin

# Headers para assets
/assets/*
  Cache-Control: public, max-age=31536000, immutable

/components/*
  Cache-Control: public, max-age=3600

# Headers para archivos HTML
/*.html
  X-Frame-Options: DENY
  X-Content-Type-Options: nosniff
  Referrer-Policy: strict-origin-when-cross-origin 
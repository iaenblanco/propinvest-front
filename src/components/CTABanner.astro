---
import CTAButton from './CTAButton.astro';

export interface Props {
  title: string;
  subtitle?: string;
  ctaText: string;
  ctaHref: string;
  variant?: 'primary' | 'secondary' | 'gradient' | 'elegant';
  ctaVariant?: 'primary' | 'secondary' | 'outline' | 'gradient';
  ctaSize?: 'small' | 'medium' | 'large';
  iconSvg?: string;
  className?: string;
}

const { 
  title, 
  subtitle, 
  ctaText, 
  ctaHref, 
  variant = 'elegant',
  ctaVariant = 'primary',
  ctaSize = 'large',
  iconSvg,
  className = ''
} = Astro.props;

const variantClasses = {
  primary: 'cta-banner-primary',
  secondary: 'cta-banner-secondary', 
  gradient: 'cta-banner-gradient',
  elegant: 'cta-banner-elegant'
};
---

<div class={`cta-banner-modular ${variantClasses[variant]} ${className}`}>
  <div class="cta-banner-content">
    <div class="cta-banner-text">
      <h2 class="cta-banner-title">{title}</h2>
      {subtitle && <p class="cta-banner-subtitle">{subtitle}</p>}
    </div>
    <div class="cta-banner-action">
      <CTAButton 
        text={ctaText}
        href={ctaHref}
        variant={ctaVariant}
        size={ctaSize}
        iconSvg={iconSvg}
      />
    </div>
  </div>
  <div class="cta-banner-decoration"></div>
</div>

<style>
  .cta-banner-modular {
    position: relative;
    border-radius: 20px;
    padding: 3rem 2rem;
    margin: 3rem 0;
    overflow: hidden;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .cta-banner-modular:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.15);
  }

  .cta-banner-content {
    position: relative;
    z-index: 2;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: 2rem;
  }

  .cta-banner-text {
    max-width: 600px;
  }

  .cta-banner-title {
    font-family: var(--font-secondary);
    font-size: 2.5rem;
    font-weight: 700;
    margin: 0 0 1rem 0;
    line-height: 1.2;
  }

  .cta-banner-subtitle {
    font-size: 1.2rem;
    margin: 0;
    opacity: 0.9;
    line-height: 1.5;
  }

  .cta-banner-action {
    display: flex;
    justify-content: center;
  }

  .cta-banner-decoration {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, rgba(255, 255, 255, 0.1) 0%, rgba(255, 255, 255, 0.05) 100%);
    border-radius: 20px;
    z-index: 1;
  }

  /* Variantes */
  .cta-banner-primary {
    background: linear-gradient(135deg, #000000 0%, #2c2c2c 100%);
    color: white;
  }

  .cta-banner-secondary {
    background: linear-gradient(135deg, #8c6b3b 0%, #a67c52 100%);
    color: white;
  }

  .cta-banner-gradient {
    background: linear-gradient(135deg, #000000 0%, #8c6b3b 50%, #000000 100%);
    color: white;
  }

  .cta-banner-elegant {
    background: linear-gradient(135deg, #f8f8f8 0%, #e8e8e8 100%);
    color: #000000;
    border: 2px solid #000000;
  }

  .cta-banner-elegant .cta-banner-title {
    color: #000000;
  }

  .cta-banner-elegant .cta-banner-subtitle {
    color: #555;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .cta-banner-modular {
      padding: 2rem 1.5rem;
      margin: 2rem 0;
    }

    .cta-banner-title {
      font-size: 2rem;
    }

    .cta-banner-subtitle {
      font-size: 1.1rem;
    }

    .cta-banner-content {
      gap: 1.5rem;
    }
  }

  @media (max-width: 480px) {
    .cta-banner-modular {
      padding: 1.5rem 1rem;
    }

    .cta-banner-title {
      font-size: 1.8rem;
    }

    .cta-banner-subtitle {
      font-size: 1rem;
    }
  }
</style> 